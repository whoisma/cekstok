<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_body"
    android:clickable="true"
    android:padding="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/img_icon"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <RelativeLayout
            android:layout_toRightOf="@id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_kode"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_below="@id/txt_kode"
                android:textSize="17sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_suplier"
                android:singleLine="true"
                android:layout_below="@id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_toko"
                android:singleLine="true"
                android:layout_below="@id/txt_suplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stok"
                android:text="Stock: "
                android:layout_below="@id/txt_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_stok"
                android:layout_below="@id/txt_toko"
                android:layout_toRightOf="@id/stok"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/harga"
                    android:text="Harga: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_harga"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>