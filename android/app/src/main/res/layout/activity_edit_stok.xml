<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="SKU / Kode Product"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_kode"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Nama"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_nama"
                android:textSize="16dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Supplier"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_supplier"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Kode Toko"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_toko"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Nama Toko"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_namatoko"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Harga"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_harga"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Stok"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/input_jml"
                android:textSize="16dp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/border"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/tititle_area"
                android:textSize="16dp"
                android:textColor="@color/colorGrey"
                android:text="Lokasi Area"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/input_lokasi"
                android:textSize="16dp"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:padding="10dp"
                android:inputType="text"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/tititle_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:background="@color/colorTransparant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/btn_save"
            android:layout_below="@id/edhp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_press_primary"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:text="Simpan"
                android:textSize="20dp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>